@{
    ViewData["Title"] = "Joel Hilton Movie Database";
}

@model Mission4.Models.AddToDatabase

<!-- Header-->
<header class="bg-primary bg-gradient text-white">
    <div class="container px-4 text-center">
        <h1 class="fw-bolder">Movie Database</h1>
    </div>
</header>

<!-- Movie Form-->
<section>
    <div class="container px-4">
        <div class="row gx-4 justify-content-center">
            <div class="col-lg-8">
                <h2>Add to Movie Database</h2>
            </div>
            <div class="col-lg-8">
                <form method="post">
                    <div asp-validation-summary="All"></div>
                    <label asp-for="CategoryId">Category:</label>
                    <select asp-for="CategoryId">
                        <option value="">Select a Category...</option>
                        @foreach (Category c in ViewBag.Categories)
                        {
                            <option value="@c.CategoryID">@c.CategoryName</option>
                        }
                    </select><br />
                    
                    <label asp-for="Title">Title:</label>
                    <input asp-for="Title" /><br />
                    
                    <label asp-for="Year">Year:</label>
                    <input asp-for="Year" type="number" min="1888" step="1" maxlength="4" /><br />
                    
                    <label asp-for="Director">Director:</label>
                    <input asp-for="Director" /><br />
                    
                    <label asp-for="Rating">Rating:</label>
                    <select asp-for="Rating">
                        <option value="G">G</option>
                        <option value="PG">PG</option>
                        <option value="PG-13">PG-13</option>
                        <option value="R">R</option>
                    </select><br />
                    
                    <label asp-for="Edited">Edited:</label>
                    <select asp-for="Edited">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select><br />
                    
                    <label asp-for="Lent">Lent to:</label>
                    <input asp-for="Lent" /><br />
                    
                    <label asp-for="Notes">Notes:</label>
                    <input asp-for="Notes" maxlength="25" /><br />

                    <button type="submit">Add Movie</button>
                </form>
            </div>
        </div>
    </div>
</section>
