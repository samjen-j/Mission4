@{
    ViewData["Title"] = "List of Movies";
}


@model List<AddToDatabase>

<!-- Header-->
<header class="bg-primary bg-gradient text-white">
    <div class="container px-4 text-center">
        <h1 class="fw-bolder">List of Movies</h1>
    </div>
</header>

<!-- CRUD section-->
<section>
    <div class="container px-4">
        <div class="row gx-4 justify-content-center">
            <div class="col-lg-8">
                <table class="table table-bordered table-striped">
                    <thead class="fw-bolder">
                        <!-- Build Column Heads -->
                        <tr>
                            <td>Category</td>
                            <td>Title</td>
                            <td>Year</td>
                            <td>Director</td>
                            <td>Rating</td>
                            <td>Edited?</td>
                            <td>Lent to</td>
                            <td>Notes</td>
                        </tr>
                    </thead>
                    <!-- Build rows in table -->
                    <tbody>
                        @foreach (var x in Model)
                            {
                                <tr>
                                    <td>@x.Category.CategoryName</td>
                                    <td>@x.Title</td>
                                    <td>@x.Year</td>
                                    <td>@x.Director</td>
                                    <td>@x.Rating</td>
                                    <td>@x.Edited</td>
                                    <td>@x.Lent</td>
                                    <td>@x.Notes</td>
                                    <!-- Actions-->
                                    <td><a asp-controller="Home" asp-action="Edit" asp-route-movieid="@x.MovieId">Edit</a></td>
                                    <td><a asp-controller="Home" asp-action="Delete" asp-route-movieid="@x.MovieId">Delete</a></td>
                                </tr>
                            }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>